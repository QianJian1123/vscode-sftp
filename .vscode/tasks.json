// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": "build"
        },
        {
            "type": "gulp",
            "task": "build",
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "type": "gulp",
            "task": "clean",
            "group": "build"
        },
        {
            "type": "gulp",
            "task": "publish",
            "group": "build"
        },
        {
            "type": "gulp",
            "task": "package",
            "group": "build"
        }
    ]
}